{
  "name": "@jetstreamgg/tarmac",
  "version": "0.1.0",
  "description": "Tarmac is a web3 application framework for building decentralized applications",
  "engines": {
    "pnpm": ">=9",
    "node": ">=20.19.0"
  },
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "prettier": "prettier --write --cache .",
    "lint": "eslint --cache",
    "build": "pnpm messages && pnpm -r run build",
    "build:packages": "pnpm -r --filter='./packages/**' build",
    "build:restricted": "VITE_PUBLIC_RESTRICTED_BUILD=true pnpm -r run build",
    "dev": "pnpm messages && pnpm -F webapp dev",
    "dev:packages": "pnpm messages && pnpm --parallel -F './packages/**' dev",
    "preview": "pnpm --filter='./apps/webapp' preview",
    "preview:restricted": "pnpm --filter='./apps/webapp' preview:restricted",
    "preview:restricted-mica": "pnpm --filter='./apps/webapp' preview:restricted-mica",
    "test": "pnpm -r --filter='!./packages/hooks' --parallel run test && pnpm test:hooks",
    "test:coverage": "pnpm vnet:fork && pnpm -r --workspace-concurrency=1 run test:coverage && pnpm vnet:delete",
    "test:coverage:ci": "pnpm -r --workspace-concurrency=1 --filter './packages/**' run test:coverage",
    "test:coverage:alternate:fork": "pnpm vnet:alternate:fork && USE_ALTERNATE_VNET=true pnpm -r --workspace-concurrency=1 run test:coverage && pnpm vnet:alternate:delete",
    "test:hooks": "pnpm vnet:fork && pnpm --filter='./packages/hooks' run test && pnpm vnet:delete",
    "test:hooks:alternate:fork": "pnpm vnet:alternate:fork && USE_ALTERNATE_VNET=true pnpm --filter='./packages/hooks' run test && pnpm vnet:alternate:delete",
    "test:widgets": "pnpm vnet:fork && pnpm --filter='./packages/widgets' run test && pnpm vnet:delete",
    "test:utils": "pnpm --filter='./packages/utils' run test",
    "e2e": "pnpm messages && pnpm vnet:delete:all && pnpm vnet:fork && pnpm -F webapp e2e",
    "e2e:no-vnet": "pnpm messages && pnpm -F webapp e2e",
    "e2e:ui": "pnpm messages && pnpm vnet:delete:all && pnpm vnet:fork && pnpm -F webapp e2e:ui",
    "vnet:fork": "node --env-file=.env ./scripts/forkVnet.ts",
    "vnet:fork:ci": "node ./scripts/forkVnet.ts",
    "vnet:snapshots:recreate": "rm -f apps/webapp/src/test/e2e/persistent-vnet-snapshots.json && echo '✅ Deleted old snapshots. Run tests to create new snapshots with updated funding.'",
    "vnet:snapshots:delete": "rm -f apps/webapp/src/test/e2e/persistent-vnet-snapshots.json && echo '✅ Snapshots deleted'",
    "vnet:reset": "pnpm vnet:delete:all && pnpm vnet:fork && pnpm vnet:snapshots:delete && echo '✅ VNets reset. Run tests to fund and create snapshots.'",
    "vnet:delete": "node --env-file=.env ./scripts/deleteVnet.ts",
    "vnet:delete:all": "node --env-file=.env ./scripts/deleteAllVnets.js 'local-tests-testnet'",
    "vnet:delete:all:ci": "node ./scripts/deleteAllVnets.js 'ci-tests-testnet'",
    "vnet:delete:all:ci:local": "node --env-file=.env ./scripts/deleteAllVnets.js 'ci-tests-testnet'",
    "vnet:delete:ci": "node ./scripts/deleteVnet.ts",
    "vnet:fund:single": "cd apps/webapp && npx tsx --tsconfig tsconfig.json src/test/e2e/fund-single-account.ts",
    "vnet:alternate:fork": "node --env-file=.env ./scripts/forkAlternateVnet.js",
    "vnet:alternate:fork:ci": "node ./scripts/forkAlternateVnet.js",
    "vnet:alternate:delete": "node --env-file=.env ./scripts/cleanupAlternateVnet.js",
    "vnet:alternate:delete:ci": "node ./scripts/cleanupAlternateVnet.js",
    "vnet:alternate:fund": "cd apps/webapp && USE_ALTERNATE_VNET=true npx tsx --tsconfig tsconfig.json src/test/e2e/fund-accounts.ts",
    "prepare": "husky",
    "typecheck": "pnpm --filter './packages/**' --filter './apps/**' typecheck",
    "messages:extract": "lingui extract --clean",
    "messages:compile": "lingui compile",
    "messages": "pnpm messages:extract && pnpm messages:compile",
    "changeset:release": "pnpm build && npx changeset publish",
    "knip": "knip",
    "pr:desc": "bash ./scripts/generate_pr_description.sh"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --cache",
      "eslint --cache --fix"
    ]
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jetstreamgg/tarmac.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jetstreamgg/tarmac/issues"
  },
  "homepage": "https://github.com/jetstreamgg/tarmac#readme",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/webapp"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@eslint/eslintrc": "catalog:",
    "@eslint/js": "catalog:",
    "@lingui/cli": "catalog:",
    "@lingui/conf": "catalog:",
    "@lingui/format-po": "catalog:",
    "@tanstack/eslint-plugin-query": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-testing-library": "catalog:",
    "globals": "catalog:",
    "happy-dom": "catalog:",
    "husky": "catalog:",
    "knip": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": "^0.25.0",
      "@babel/runtime@7.26.7": "7.26.10"
    }
  },
  "packageManager": "pnpm@10.17.0"
}
